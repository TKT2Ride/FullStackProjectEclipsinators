@model CTWMasterClass_WebAppActivities.Models.Barrel

<h3 class="majorHeading">Delete</h3>
<div>
    <h4 class="minorHeading">Are you sure you want to delete this barrel?</h4>
    <hr />

    <div align="center" class="generalText">
        <p>Date created: @Html.DisplayFor(model => model.DateCreated)</p>
        <p>Contents: @Html.DisplayFor(model => model.Contents)</p>
        <p>Current Location: @Html.DisplayFor(model => model.CurrentLocation)</p>
        <p>Construction Material: @Html.DisplayFor(model => model.ConstructionMaterial)</p>
        <p>Radius: @Html.DisplayFor(model => model.Radius)</p>
        <p>Height: @Html.DisplayFor(model => model.Height)</p>
    </div>

    <div class="generalText">This deletion will be permanent</div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit">Yes, delete!</button> |
            <button type="button">@Html.ActionLink("No thanks", "Index")</button>
        </div>
    }

</div>
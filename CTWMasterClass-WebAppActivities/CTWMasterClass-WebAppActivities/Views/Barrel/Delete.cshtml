@model CTWMasterClass_WebAppActivities.Models.Barrel

<body style="background-color:#1b212c;">
    <link href="~/Evan/Create.css" rel="stylesheet" />
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <br />
    <div id="background">
        <div class="row">
            <div class="offset-md-3 col-sm-3 ">
                <div class="row">
                    <div class="navText">

                        <a href="https://localhost:44325/Evan/Home.html" class="navText" align="center">Home</a>
                        <a href="https://localhost:44325/Jacob/AboutUs.html" class="navText" align="center"> List</a>
                        <a href="https://localhost:44325/Website%20Tools/Donor.html" class="navText" align="center">Create</a>

                    </div>
                </div>
            </div>
            <div class="row">

                <div class="offset-md-3 col-sm-1">
                    <br />
                    <hr>
                </div>
                <div class="col-sm-4">
                    <h3 class="majorHeading" align="center">Create a Barrel</h3>
                </div>
                <div class="col-sm-1 offset-md-3">
                    <br />
                    <hr>
                </div>

            </div>
        </div>
    </div>
</body>


<div class="row">
    <div class="col-sm-12">
        <h4 class="minorHeading">Are you sure you want to delete this barrel?</h4>
    </div>
</div>
<div>

    <hr />
    <div class="row">
        <div align="center" class="generalText">
            <p>Date created: @Html.DisplayFor(model => model.DateCreated)</p>
            <p>Contents: @Html.DisplayFor(model => model.Contents)</p>
            <p>Current Location: @Html.DisplayFor(model => model.CurrentLocation)</p>
            <p>Construction Material: @Html.DisplayFor(model => model.ConstructionMaterial)</p>
            <p>Radius: @Html.DisplayFor(model => model.Radius)</p>
            <p>Height: @Html.DisplayFor(model => model.Height)</p>
            <br />
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="minorHeading">This deletion will be permanent</div>
        </div>
    </div>
    <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="row">
                    <button type="submit" class="buttonFormattingRed col-sm-3">Yes, delete!</button>
                </div>
                <br />
                <div class="row">
                    <button type="button" class="buttonFormattingGrey col-sm-3">@Html.ActionLink("No thanks", "Index")</button>
                </div>
            </div>
            
        }

    

</div>
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

<body style="background-color:#1b212c;">
    <link href="~/Evan/Create.css" rel="stylesheet" />
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <br />
    <div id="background">
        <div class="container">
            <div class="row">
                <div class=" col-sm-4">
                    <img src="~/Content/TriStar Logo.jpg" width="118px" height="89px" ; />
                </div>
                <div class="navText">
                    <div class="col-sm-2" align="right">
                        <br />
                        <a href="https://localhost:44343/Barrel/HomePage">Home</a>
                    </div>
                    <div class="col-sm-2 col-sm-offset-1" align="right">
                        <br />
                        <a href="https://localhost:44343/Barrel/Index">List</a>
                    </div>
                    <div class="col-sm-2 col-sm-offset-1" align="right">
                        <br />
